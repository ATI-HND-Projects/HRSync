@model UserRoleVM 

<form asp-controller="Admin" asp-action="EditUserRole" method="post">
    <input asp-for="RoleId" type="hidden"/>
    <input asp-for="AddedDate" type="hidden" />

    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly"></div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Role">Role</label>
            <input type="text" class="form-control" asp-for="Role" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Role">Description</label>
            <input type="text" class="form-control" asp-for="Role"/>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>
</form>